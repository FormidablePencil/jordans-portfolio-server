    "nodemon": "^2.0.4",
    "pug": "^3.0.0",
    "ts-node": "^9.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.7",
    "@types/mongoose": "^5.7.36",
    "@types/node": "^14.6.0",
    "tslint": "^6.1.3",
    "typescript": "^4.0.2"
  }
